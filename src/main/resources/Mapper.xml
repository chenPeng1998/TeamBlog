<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="map.Mapper">
    <!--配置一个resultMap 指定返回的类型 -->
    <resultMap id="qrole" type="role">
        <result column="id" property="id" />
        <result column="userName" property="userName" />
        <result column="passWord" property="passWord" />
    </resultMap>
    <resultMap id="syudent" type="student">
        <result column="id" property="id"></result>
        <result column="password" property="password"></result>
        <result column="username" property="username"></result>
    </resultMap>
    <resultMap id="userInfo" type="userInfo">
        <result column="name" property="name" />
        <result column="id" property="id" />
        <result column="age" property="age" />
        <result column="salary" property="salary" />
    </resultMap>
    <delete id="deleteRole" parameterType="int">
        DELETE  FROM t_role WHERE id=#{id}
    </delete>
    <select id="getRole" parameterType="int" resultType="role" >
        SELECT USERNAME,PASSWORD FROM t_role WHERE id=#{id}
    </select>
    <insert id="insertRole" parameterType="role" >
      INSERT INTO t_role(userName,passWord) VALUES (#{userName},#{passWord});
    </insert>
    <update id="updateRole" parameterType="role"  >
        UPDATE t_role SET userName=#{userName} ,passWord=#{passWord}
        WHERE id=#{id}
    </update>
    <select id="queryrole"  resultMap="qrole" >
        select * from t_role
    </select>
    <select id="queryUserInfo"  resultMap="userInfo" >
        select * from t_userinfo
    </select>
    <insert id="addStuInfo" parameterType="student">
        INSERT INTO student(username, password) VALUES (#{username},#{password})
    </insert>
    <select id="findStuInfo" parameterType="student" resultType="int">
        SELECT * FROM student WHERE username=#{username} and password=#{password}
    </select>
    <select id="queryStudent" resultMap="syudent">
        SELECT * FROM student
    </select>
    <delete id="deleteStudent" parameterType="int" >
        DELETE FROM student WHERE id=#{id}
    </delete>
    <update id="updateStudent" parameterType="student">
        update student set username=#{username},password=#{password}   where id=#{id};
    </update>
</mapper>
